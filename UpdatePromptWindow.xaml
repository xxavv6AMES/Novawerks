<Window x:Class="NovawerksApp.UpdatePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        Foreground="#FFF">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="A new version is available!" FontSize="16" Foreground="#FFA500" Margin="0,0,0,10" />
            <TextBlock x:Name="VersionTextBlock" Text="" Foreground="#FFF" Margin="0,0,0,20" />
            <Button Content="Update Now" Click="UpdateNow_Click" Background="#FFA500" Foreground="#000" Width="100" HorizontalAlignment="Center" Margin="5"/>
            <Button Content="Later" Click="Later_Click" Background="#555" Foreground="#FFF" Width="100" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
