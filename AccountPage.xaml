<Window x:Class="NovawerksApp.AccountPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NovawerksApp"
        Title="Account Management" Height="400" Width="600">
    <Window.Resources>
        <local:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="Account Management" FontSize="24" Margin="0,0,0,20"/>
            
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Width="400" IsReadOnly="True"/>
            
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10" Width="400"/>
            <TextBlock Text="New Password" IsHitTestVisible="False" Foreground="Gray"
                       VerticalAlignment="Center" HorizontalAlignment="Left"
                       Margin="5,0,0,0" Visibility="{Binding ElementName=NewPasswordBox, Path=Password.Length, Converter={StaticResource EmptyToVisibilityConverter}}"/>
            
            <Button Content="Update Email" Width="200" Margin="0,0,0,10" Click="UpdateEmailButton_Click"/>
            <Button Content="Change Password" Width="200" Margin="0,0,0,10" Click="ChangePasswordButton_Click"/>
            <Button Content="Logout" Width="200" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
