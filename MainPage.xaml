<Page x:Class="NovawerksApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      Background="#121212" Foreground="#E0E0E0">

    <!-- Root Grid Element -->
    <Grid>
        <!-- Define Columns and Rows for Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- For Left Menu -->
            <ColumnDefinition Width="*" />    <!-- For Main Content -->
            <ColumnDefinition Width="300"/>   <!-- For Help Sidebar -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- For Menu -->
            <RowDefinition Height="*" />      <!-- For Content -->
            <RowDefinition Height="Auto"/>    <!-- For Footer -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Background="#1F1F1F" Foreground="#E0E0E0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top" Height="30">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" InputGestureText="Ctrl+O" Click="OpenMenuItem_Click" Foreground="#B0B0B0"/>
                <MenuItem Header="_Save" InputGestureText="Ctrl+S" Click="SaveMenuItem_Click" Foreground="#B0B0B0"/>
                <MenuItem Header="_Exit" InputGestureText="Alt+F4" Click="ExitMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z" Click="UndoMenuItem_Click" Foreground="#B0B0B0"/>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y" Click="RedoMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Refresh" InputGestureText="F5" Click="RefreshMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Help Center" InputGestureText="Ctrl+H" Click="HelpMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
            <MenuItem Header="_Store">
                <MenuItem Header="_Addon Store" InputGestureText="Ctrl+A" Click="AddonStoreMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
            <MenuItem Header="_Forum">
                <MenuItem Header="_Novawerks Forum" Click="ForumMenuItem_Click" Foreground="#B0B0B0"/>
            </MenuItem>
        </Menu>

        <!-- Left Menu (Initially Collapsed) -->
        <Border x:Name="LeftMenu" Background="#2F2F2F" Width="250" Grid.Row="1" Grid.Column="0" VerticalAlignment="Stretch" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="MainPageMenuItem" Text="Main Page" Margin="10" Padding="10" Foreground="#CCCCCC" Cursor="Hand" FontSize="16" FontWeight="Medium" MouseDown="MainPageButton_Click" FontFamily="{StaticResource xGFF}"/>
                <TextBlock x:Name="ForumPageMenuItem" Text="Forum Page" Margin="10" Padding="10" Foreground="#CCCCCC" Cursor="Hand" FontSize="16" FontWeight="Medium" MouseDown="ForumPageButton_Click" FontFamily="{StaticResource xGFF}"/>
                <TextBlock x:Name="NWASPageMenuItem" Text="NWAS Page" Margin="10" Padding="10" Foreground="#CCCCCC" Cursor="Hand" FontSize="16" FontWeight="Medium" MouseDown="NWASPageButton_Click" FontFamily="{StaticResource xGFF}"/>
            </StackPanel>
        </Border>

        <!-- Help Sidebar (Initially Collapsed) -->
        <Border x:Name="HelpSidebar" Background="#1F1F1F" Width="300" Grid.Row="1" Grid.Column="2" VerticalAlignment="Stretch" Visibility="Collapsed">
            <Grid>
                <!-- Close Button -->
                <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Margin="5" Click="CloseHelpSidebar_Click" FontSize="16" FontWeight="Bold" Background="#FF4444" Foreground="#FFFFFF"/>

                <!-- WebView2 -->
                <wv2:WebView2 x:Name="HelpWebView" Source="https://werks.nova.xxavvgroup.com/helpcenter" Margin="0,35,0,0"/>
            </Grid>
        </Border>

        <!-- Content Area with Frame for Navigation -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Intro Text -->
                    <TextBlock Text="Welcome to the Novawerks App" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#E0E0E0" FontFamily="{StaticResource xGFF}"/>
                    <TextBlock Text="This is a basic UI with an AMOLED dark theme." FontSize="16" Margin="0,0,0,20" Foreground="#B0B0B0" FontFamily="{StaticResource xGFF}"/>

                    <!-- Latest App Update Information -->
                    <Border Background="#2F2F2F" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Latest Update:" FontSize="22" FontWeight="Bold" Foreground="#E0E0E0" FontFamily="{StaticResource xGFF}"/>
                            <TextBlock Text="Version 1" FontSize="18" FontWeight="SemiBold" Foreground="#B0B0B0" FontFamily="{StaticResource xGFF}"/>
                            <TextBlock Text="The initial version of Novawerks! :)" FontSize="14" Foreground="#B0B0B0" FontFamily="{StaticResource xGFF}"/>
                        </StackPanel>
                    </Border>

                    <!-- Placeholder for Latest Post -->
                    <Border Background="#2F2F2F" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Latest Blog Post" FontSize="22" FontWeight="Bold" Foreground="#E0E0E0" FontFamily="{StaticResource xGFF}"/>
                            <TextBlock Text="Title of the latest post" FontSize="18" FontWeight="SemiBold" Foreground="#B0B0B0" FontFamily="{StaticResource xGFF}"/>
                            <TextBlock Text="Description of the latest post." FontSize="14" Foreground="#B0B0B0" TextWrapping="Wrap" FontFamily="{StaticResource xGFF}"/>
                            <TextBlock>
                                <Hyperlink NavigateUri="http://example.com">
                                    <TextBlock Text="Read More" Foreground="#8C52FF" FontFamily="{StaticResource xGFF}"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Frame for Page Navigation -->
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Grid.Column="1" Margin="0,0,0,0"/>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="#1F1F1F" Height="40" VerticalAlignment="Bottom">
            <TextBlock Text="Â© 2024 xxavv6AMES" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#E0E0E0" FontFamily="{StaticResource xGFF}"/>
        </Border>

        <!-- Hover Detection Area (Invisible) -->
        <Border x:Name="HoverArea" Background="Transparent" Width="13" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,0,0,0"/>
    </Grid>
</Page>
