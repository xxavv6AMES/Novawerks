<Window x:Class="NovawerksApp.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Launcher-Only Mode"
        Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Header Text -->
        <TextBlock Text="Launcher-Only Mode" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- List of Addons -->
        <ListBox x:Name="AddonListBox" Margin="20,50,20,50">
            <ListBoxItem Content="Addon 1"/>
            <ListBoxItem Content="Addon 2"/>
            <ListBoxItem Content="Addon 3"/>
        </ListBox>

        <!-- Launch Button -->
        <Button Content="Launch Selected Addon" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"
                Width="180" Click="LaunchButton_Click"/>
    </Grid>
</Window>
