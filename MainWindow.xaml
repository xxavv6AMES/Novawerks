<Window x:Class="NovawerksApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novawerks App" Height="720" Width="1280"
        Background="#000000" Foreground="#FFFFFF">

    <Grid>
        <!-- Header with Menu Bar -->
        <Border Background="#1F1F1F" Height="70" VerticalAlignment="Top">
            <DockPanel>
                <!-- Menu Bar -->
                <Menu DockPanel.Dock="Top" Background="#1F1F1F" Foreground="#FFFFFF" VerticalAlignment="Center" Padding="0">
                    <MenuItem Header="File">
                        <MenuItem Header="New" Click="NewMenuItem_Click"/>
                        <MenuItem Header="Open" Click="OpenMenuItem_Click"/>
                        <MenuItem Header="Save" Click="SaveMenuItem_Click"/>
                        <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Edit">
                        <MenuItem Header="Undo" Click="UndoMenuItem_Click"/>
                        <MenuItem Header="Redo" Click="RedoMenuItem_Click"/>
                        <MenuItem Header="Cut" Click="CutMenuItem_Click"/>
                        <MenuItem Header="Copy" Click="CopyMenuItem_Click"/>
                        <MenuItem Header="Paste" Click="PasteMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="View">
                        <MenuItem Header="Zoom In" Click="ZoomInMenuItem_Click"/>
                        <MenuItem Header="Zoom Out" Click="ZoomOutMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="Help">
                        <MenuItem Header="About" Click="AboutMenuItem_Click"/>
                        <MenuItem Header="Help Contents" Click="HelpContentsMenuItem_Click"/>
                    </MenuItem>
                </Menu>
                <TextBlock Text="Novawerks App" FontSize="24" FontWeight="Bold" Margin="20" VerticalAlignment="Center" Foreground="#FFFFFF"/>
            </DockPanel>
        </Border>

        <!-- Content Area -->
        <Grid Margin="0,70,0,40">
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
                <StackPanel Margin="20">
                    <TextBlock Text="Welcome to the Novawerks App" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#FFFFFF"/>
                    <TextBlock Text="This is a basic UI with an AMOLED dark theme." FontSize="16" Margin="0,0,0,20" Foreground="#CCCCCC"/>
                    <!-- Add more content here -->
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Border Background="#1F1F1F" Height="40" VerticalAlignment="Bottom">
            <TextBlock Text="© 2024 xxavv6AMES" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
        </Border>
    </Grid>
</Window>
