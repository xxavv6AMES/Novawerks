<Window x:Class="NovawerksApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Novawerks" Height="800" Width="1400"
        Background="#000000" Foreground="#FFFFFF">

    <!-- Root Grid Element -->
    <Grid>
        <!-- Define Rows for Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- For Menu -->
            <RowDefinition Height="*"/>    <!-- For Content -->
            <RowDefinition Height="Auto"/> <!-- For Footer -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Background="#FFFFFF" Foreground="Black" Grid.Row="0" VerticalAlignment="Top" Height="20">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" InputGestureText="Ctrl+O" Click="OpenMenuItem_Click"/>
                <MenuItem Header="_Save" InputGestureText="Ctrl+S" Click="SaveMenuItem_Click"/>
                <MenuItem Header="_Exit" InputGestureText="Alt+F4" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z" Click="UndoMenuItem_Click"/>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y" Click="RedoMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Refresh" InputGestureText="F5" Click="RefreshMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Help Center" InputGestureText="Ctrl+H" Click="HelpMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Store">
                <MenuItem Header="_Addon Store" InputGestureText="Ctrl+A" Click="AddonStoreMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Content Area with Static Content and Frame for Navigation -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Intro Text -->
                    <TextBlock Text="Welcome to the Novawerks App" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#FFFFFF"/>
                    <TextBlock Text="This is a basic UI with an AMOLED dark theme." FontSize="16" Margin="0,0,0,20" Foreground="#CCCCCC"/>

                    <!-- Latest App Update Information -->
                    <Border Background="#2F2F2F" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Latest Update:" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Version 1" FontSize="18" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                            <TextBlock Text="The initial version of Novawerks! :)" FontSize="14" Foreground="#CCCCCC"/>
                        </StackPanel>
                    </Border>

                    <!-- Placeholder for Latest Post -->
                    <Border Background="#2F2F2F" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Latest Blog Post" FontSize="20" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Title of the latest post" FontSize="18" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                            <TextBlock Text="Description of the latest post." FontSize="14" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                            <TextBlock>
                                <Hyperlink NavigateUri="http://example.com">
                                    <TextBlock Text="Read More" Foreground="#8C52FF"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Frame for Page Navigation -->
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Margin="0,0,0,0"/>
        </Grid>

        <!-- Sidebar (Initially Collapsed) -->
        <Border Name="HelpSidebar" Background="#1F1F1F" Width="500" HorizontalAlignment="Right" VerticalAlignment="Stretch" Visibility="Collapsed">
            <wv2:WebView2 Name="HelpWebView" Source="https://werks.nova.xxavvgroup.com/helpcenter"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#1F1F1F" Height="40" VerticalAlignment="Bottom">
            <TextBlock Text="© 2024 xxavv6AMES" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFFFFF"/>
        </Border>
    </Grid>
</Window>
