<Window x:Class="NovawerksApp.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novawerks Automatic Updater"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        Foreground="#FFF">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Downloading and installing update" FontSize="16" Foreground="#FFA500" Margin="0,0,0,10" />
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Width="300" Height="20" Margin="0,0,0,10"/>
            <TextBlock Text="Please wait" Foreground="#FFF" />
        </StackPanel>
    </Grid>
</Window>
